{
    "name": "zephyr-template",
    "version": "0.1.0",
    "description": "A fast, lightweight, component-based templating engine that compiles .gzs files to HTML",
    "author": "Your Name",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./core": {
            "import": "./dist/core.js",
            "types": "./dist/core.d.ts"
        },
        "./errors": {
            "import": "./dist/errors.js",
            "types": "./dist/errors.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "bin": {
        "zephyr": "./dist/cli.js"
    },
    "scripts": {
        "build": "bun build src/index.ts src/core.ts src/errors.ts src/cli.ts --outdir dist --target bun",
        "build:types": "tsc --emitDeclarationOnly --outDir dist",
        "build:all": "bun run build && bun run build:types",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts",
        "prepublishOnly": "bun run build:all",
        "clean": "rm -rf dist",
        "dev": "bun --watch src/index.ts"
    },
    "keywords": [
        "template",
        "templating",
        "component",
        "html",
        "compiler",
        "bun",
        "reactive",
        "frontend"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/zephyr.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/zephyr/issues"
    },
    "homepage": "https://github.com/yourusername/zephyr#readme",
    "engines": {
        "bun": ">=1.0.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "typescript": "^5.3.0"
    },
    "peerDependencies": {
        "bun": ">=1.0.0"
    }
}